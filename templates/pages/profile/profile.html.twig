{% extends 'layouts/navbar_layout.html.twig' %}
{% block title %}Mon profil
{% endblock %}
{% block body %}
	<div class="container">
		<h1>Mon profil</h1>
		<div class="container">
			<div class="main-body">
				<div class="row gutters-sm">
					<div class="col-md-4 mb-3">
						<div class="card">
							<div class="card-body">
								<div class="d-flex flex-column align-items-center text-center">
									<img src="{{ asset('images/user/' ~ app.user.gender ~ '.jpg')}}" alt="Admin" class="rounded-circle" width="150">
									<div class="mt-3">
										<h4>{{ app.user.firstname }}
											{{app.user.lastname }}</h4>
										<p class="text-muted font-size-sm">{{ app.user.email}}</p>
									</div>
								</div>
							</div>
						</div>

					</div>
					<div class="col-md-8">
						<div class="card mb-3">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Nom et pr√©nom</h6>
									</div>
									<div class="col-sm-9 ">
										{{ app.user.firstname }}
										{{ app.user.lastname }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Email</h6>
									</div>
									<div class="col-sm-9  ">
										{{ app.user.email}}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Date de naissance</h6>
									</div>
									<div class="col-sm-9  ">
										{{ app.user.client.birthdate | date("d/m/Y")}}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Taille</h6>
									</div>
									<div class="col-sm-9  ">
										{{ app.user.client.height }}
										cm
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Poids</h6>
									</div>
									<div class="col-sm-9  ">
										{% if weight is not null %}
											{{ weight.weight }}
											kg
										{% endif %}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Genre</h6>
									</div>
									<div class="col-sm-9  ">
										{{ app.user.genderValue }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-12">
										<a class="navbar-brand btn btn-inscription" href="{{ path('profile_update')}}">Modifier</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
